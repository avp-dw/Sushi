mixin icon(name,uniqueClass)
	svg(class="icon svg-" + name + '-dims' + " " + uniqueClass)
		use(xlink:href="svgSprite/sprite.svg#" + name)

mixin iconImg(name,uniqueClass,ariaLabel)
	svg(class="icon svg-" + name + '-dims' + " " + uniqueClass role="image" aria-label=ariaLabel)
		use(xlink:href="svgSprite/sprite.svg#" + name)

mixin webp(name,format,alt)
	picture 
		source(srcset="images/" + name + ".webp" type="image/webp")
		img(class=name src="images/" + name + "." + format alt=alt)

mixin webpRetina(name,format,alt)
	picture 
		source(srcset="images/" + name + ".webp 1x," + " images/" + name + "@2x" + ".webp" + " 2x" type="image/webp")
		img(class=name src="images/" + name + "." + format srcset="images/" + name + "@2x" + "." + format + " 2x" alt=alt)

mixin webpMedia(name,format,alt,media)
	picture 
		source(srcset="images/" + name + ".webp" type="image/webp" media=media)
		source(srcset="images/" + name + format media=media)
		source(srcset="images/" + name + ".webp" type="image/webp")
		img(class=name src="images/" + name + "." + format alt=alt)



mixin meal(name,format,alt,title,text,cost)
	.meal
		.meal__img
			+webp(name,format,alt)
		.meal__item
			h4.meal__title.title= title 
			p.meal__text= text 
			p.meal__cost= cost 

mixin menu(name,format,alt,title,text,cost)
	.menu-item
		.menu-item__img
			+webp(name,format,alt)
		.menu__inner
			h4.menu-item__title.title= title
			p.menu-item__text= text 
			span.title= cost
